<Context 
	reloadable="true"
>
	<Resource
		name="jdbc/webappdb"
		auth="Container"
		type="javax.sql.DataSource"
		maxActive="5"
		maxIdle="20"
		maxWait="10000"
		username="user"
		password="password"
		driverClassName="com.mysql.jdbc.Driver"
		url="jdbc:mysql://database:3306/webappdb" 
	/>
</Context>